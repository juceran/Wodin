@model IEnumerable<Wodin.Models.Empresa>

@{
    ViewData["Title"] = "Listagem de Empresas Base Administrativa";
}

<h2>@ViewData["Title"]</h2>
<h2>@ViewData["Message"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default" title="Deseja cadastrar novo departamento?"><span class="glyphicon glyphicon-plus-sign"></span> Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fantasia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Database)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Database)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id" title="Editar a empresa"><span class="glyphicon glyphicon-edit"></span></a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id" title="Detalhes da empresa"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" title="Deletar a empresa"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>