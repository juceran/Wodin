@model IEnumerable<Wodin.Models.UsuarioPermissaoAcesso>

@{
    ViewData["Title"] = "Listagem de permissões de acesso ao sistema";
}

<h2>@ViewData["Title"]</h2>
<h2>@ViewData["Message"]</h2>

@*<p>
        <a asp-action="Create" class="btn btn-default" title="Deseja cadastrar nova permissão?"><span class="glyphicon glyphicon-plus-sign"></span> Novo</a>
    </p>*@
<form asp-action="Index" method="get">
    <div class="form-actions no-color col-sm-4">
        <p>
            Usuário : <input type="search" name="filtro" id="filtro" value="@ViewData["filtro"]" onkeyup="myFunction()"/>
        </p>
    </div>
    <div class="form-actions no-color col-sm-4">

    </div>
    <div class="form-actions no-color col-sm-4 text-right">
        <p>
            <input type="reset" value="Limpar" class="btn btn-default" onclick="this.form.reset();return false" />
            <input type="submit" value="Filtrar" class="btn btn-default" />
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa.PessoaUsuario.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa.PessoaFisica.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa.Fantasia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Model => item.Pessoa.PessoaUsuario.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pessoa.PessoaFisica.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.Fantasia)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id" title="Editar Permissão"><span class="glyphicon glyphicon-edit"></span></a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id" title="Detalhes da Permissão"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" title="Deletar Permissão"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
